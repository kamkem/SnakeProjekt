<Page x:Class="SnakeProjekt.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SnakeProjekt"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1054"
      Title="PageMenu" Background="HotPink">

    <Grid>
        <StackPanel Margin="0 100 0 100">
        <Button x:Name="buttonGame" Content="New Game" HorizontalAlignment="Center" Height="104" VerticalAlignment="Top" Width="198" Margin="0 100 0 0" FontSize="22" Click="buttonGame_Click"/>
        <Button x:Name="buttonSettings" Content="Settings" HorizontalAlignment="Center" Height="104" VerticalAlignment="Top" Width="198" Margin="0 10 0 0" FontSize="22" Click="buttonSettings_Click"/>
        <Button x:Name="buttonHighScores" Content="High Scores" HorizontalAlignment="Center" Height="104" VerticalAlignment="Top" Width="198" Margin="0 10 0 0" FontSize="22"/>
        </StackPanel>
    </Grid>
</Page>
